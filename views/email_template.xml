<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <data noupdate="1">
       <!--Email template -->
       <record id="email_template" model="mail.template">
           <field name="name">Email Template</field>
           <field name="model_id" ref="cron_demo.model_test_email"/>
           <field name="email_from">${(object.company_id.email)}</field>
           <!-- <field name="email_from" >${object.partner_id.email}</field> -->
           <field name="email_to" >${object.partner_id.email}</field>
           <field name="subject">order ${object.name}</field>
           <field name="auto_delete" eval="True"/>
           <field name="lang">${object.partner_id.lang}</field>
           <field name="body_html"><![CDATA[
                <p>Hi ${object.name}</p> 
                <br/>
                <p>Here is the details of open invoices</p>
                 ${data}
                <br/>
                 ]]>
           </field>
       </record>
   </data>


</odoo>


